<UserControl x:Class="StreamDeckSimHub.Plugin.ActionEditor.Views.Controls.DisplayParametersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:StreamDeckSimHub.Plugin.ActionEditor.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:DisplayItemViewModel}"
             d:DesignHeight="300" d:DesignWidth="750">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0">Transparency:</Label>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
            <TextBox Width="50" Text="{Binding TransparencyText, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                     VerticalContentAlignment="Center" Margin="30,0,0,0" />
            <Label FontWeight="Light" Margin="20,0,0,0">1.0 = fully opaque, 0.0 = fully transparent</Label>
        </StackPanel>

        <Label Grid.Row="1" Grid.Column="0" Margin="0,10,0,0">Position:</Label>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
            <Label Width="30">X:</Label>
            <TextBox Width="50" Text="{Binding PosX, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center" />
            <Label Width="30" Margin="20,0,0,0">Y:</Label>
            <TextBox Width="50" Text="{Binding PosY, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center" />
        </StackPanel>

        <Label Grid.Row="2" Grid.Column="0" Margin="0,10,0,0">Size:</Label>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
            <Label Width="30">W:</Label>
            <TextBox Width="50" Text="{Binding SizeWidth, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                     VerticalContentAlignment="Center"
                     ToolTip="Bounding box of the element. No value means all available space." />
            <Label Width="30" Margin="20,0,0,0">H:</Label>
            <TextBox Width="50" Text="{Binding SizeHeight, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}"
                     VerticalContentAlignment="Center"
                     ToolTip="Bounding box of the element. No value means all available space." />
        </StackPanel>

        <Label Grid.Row="3" Grid.Column="0" Margin="0,10,0,0">Rotation:</Label>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox Width="50" Text="{Binding Rotation, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"
                     Margin="30,0,0,0" />
        </StackPanel>

    </Grid>
</UserControl>