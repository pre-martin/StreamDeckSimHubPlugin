<UserControl x:Class="StreamDeckSimHub.Plugin.ActionEditor.Views.Controls.ExpressionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:StreamDeckSimHub.Plugin.ActionEditor.Converters"
             xmlns:controls="clr-namespace:StreamDeckSimHub.Plugin.ActionEditor.Views.Controls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=controls:ExpressionControlViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="150" d:DesignWidth="550">

    <UserControl.Resources>
        <converters:NullToCollapsedConverter x:Key="NullToCollapsedConverter" />
        <converters:NotNullToCollapsedConverter x:Key="NotNullToCollapsedConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0"
               Content="{Binding ExpressionLabel}"
               d:Content="ExpressionLabel:" />
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">
            <TextBox x:Name="ExpressionTextBox"
                     Text="{Binding NCalcHolder.ExpressionString, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" MinHeight="64" MaxHeight="200"
                     ToolTip="{Binding ExpressionToolTip}" />
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="ShakeIt Bass Browser" Width="140" Click="ShakeItBrowser_OnClick" CommandParameter="Bass" />
                <Button Content="ShakeIt Motors Browser" Width="140" Click="ShakeItBrowser_OnClick" CommandParameter="Motors"
                        Margin="10,0,0,0" />
            </StackPanel>

            <TextBlock FontWeight="DemiBold"
                       Text="{Binding ExpressionErrorMessage}"
                       Foreground="Red"
                       Visibility="{Binding ExpressionErrorMessage, Converter={StaticResource NullToCollapsedConverter}}"
                       d:Text="ExpressionErrorMessage" />
            <TextBlock FontWeight="Light" TextWrapping="Wrap"
                       Visibility="{Binding ExpressionErrorMessage, Converter={StaticResource NotNullToCollapsedConverter}}"
                       Text="Property names have to be enclosed in square brackets, e.g." />
            <TextBlock FontWeight="Light" TextWrapping="Wrap"
                       Visibility="{Binding ExpressionErrorMessage, Converter={StaticResource NotNullToCollapsedConverter}}"
                       Text="{Binding Example}"
                       d:Text="Description" />
        </StackPanel>
    </Grid>
</UserControl>