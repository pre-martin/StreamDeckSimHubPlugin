<UserControl x:Class="StreamDeckSimHub.Plugin.ActionEditor.Views.Controls.ConditionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:StreamDeckSimHub.Plugin.ActionEditor.ViewModels"
             xmlns:converters="clr-namespace:StreamDeckSimHub.Plugin.ActionEditor.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:ItemViewModel}"
             d:DesignHeight="600" d:DesignWidth="550">

    <UserControl.Resources>
        <converters:InverseVisibilityConverter x:Key="InverseVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0">Conditions:</Label>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">
            <TextBox Text="{Binding ConditionString, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" MinHeight="64" MaxHeight="200"
                     ToolTip="Please enter a valid NCalc expression, that returns true or false or a number" />

            <TextBlock FontWeight="DemiBold" Text="{Binding ConditionErrorMessage}" Foreground="Red"
                       Visibility="{Binding ConditionErrorVisibility}" />
            <TextBlock FontWeight="Light" TextWrapping="Wrap"
                       Visibility="{Binding ConditionErrorVisibility, Converter={StaticResource InverseVisibilityConverter}}">
                Property names have to be enclosed in square brackets, e.g.<LineBreak />
                [DataCorePlugin.Computed.Fuel_RemainingLaps] &lt;= 2
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>