<UserControl x:Class="StreamDeckSimHub.Plugin.ActionEditor.Views.DisplayItemImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:StreamDeckSimHub.Plugin.ActionEditor.ViewModels"
             xmlns:views="clr-namespace:StreamDeckSimHub.Plugin.ActionEditor.Views"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:DisplayItemImageViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="600" d:DesignWidth="550">

    <!--
    <TabControl>
        <TabItem Header="Element" />    <!- DisplayItem with all properties and conditions ->
        <TabItem Header="Modifiers" />  <!- Runtime specific modifiers (flash?, transparency?), each with conditions ->
    </TabControl>
    -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Margin="0,10,0,0">Image:</Label>
        <Grid Grid.Row="0" Grid.Column="1" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Width="80" Height="80" HorizontalAlignment="Left" VerticalAlignment="Top"
                    BorderThickness="4" BorderBrush="Gray"
                    Background="Black"> <!-- emulate Stream Deck key background color / 80 = 72 + Border 2*4 -->
                <Image Width="72" Source="{Binding ImageSource}"
                       HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,5,0,0">
                <Label Content="{Binding RelativePath}" />
                <Label Content="{Binding Resolution}" />
            </StackPanel>

            <Button Grid.Row="1" Grid.Column="0" Command="{Binding  SelectImageCommand}" Width="80" Height="20" Margin="0,5,0,0">Change</Button>
        </Grid>

    </Grid>
</UserControl>